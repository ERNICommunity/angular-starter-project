# Editor configuration, see https://editorconfig.org

# Top-most EditorConfig file
root = true

# Rules for every file:
# - Set the default charset
# - Indentation with spaces (instead of tab)
# - 2 space indentation
# - Newline ending
# - No whitespace characters preceding newline characters
# - Maximal line length of 120 characters
[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Rules for .ts files
# - Use single quotes for string literals
[*.ts]
quote_type = single

# Rules for .md files
# - No maximal line length
# - Whitespace characters preceding newline characters are allowed
[*.md]
max_line_length = off
trim_trailing_whitespace = false
